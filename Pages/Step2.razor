@code {
    [Parameter]
    public EventCallback OnNext { get; set; }
    [Parameter]
    public EventCallback OnPrevious { get; set; }

    private void GoNext()
    {
        if (OnNext.HasDelegate)
        {
            OnNext.InvokeAsync();
        }
    }

    private void GoPrevious()
    {
        if (OnPrevious.HasDelegate)
        {
            OnPrevious.InvokeAsync();
        }
    }
}

<h4>Step 2: Company Name</h4>
<div>
    <input type="email" />
</div>
<button class="btn btn-primary" @onclick="GoPrevious">Previous</button>
<button class="btn btn-primary" @onclick="GoNext">Next</button>


