@page "/registration"
@using Microsoft.AspNetCore.Components

<div class="multistep-form-container">
    <h3 class="form-title">KGCOMPANY</h3>

    @if (currentStep == 1)
    {
        <Step1 OnNext="NextStep" />
    }
    else if (currentStep == 2)
    {
        <Step2 OnNext="NextStep" OnPrevious="PreviousStep" />
    }
    else if (currentStep == 3)
    {
        <Step3 OnNext="NextStep" OnPrevious="PreviousStep" />
    }
    else if (currentStep == 4)
    {
        <Step4 OnNext="NextStep" OnPrevious="PreviousStep" />
    }
    else if (currentStep == 5)
    {
        <Step5 OnPrevious="PreviousStep" OnSubmit="SubmitForm" />
    }

    <div class="step-indicator">
        @for (int i = 1; i <= 5; i++)
        {
            <div class="step @(i <= currentStep ? "active" : "")"></div>
        }
    </div>
</div>

@code {
    private int currentStep = 1;

    private void NextStep()
    {
        currentStep++;
    }

    private void PreviousStep()
    {
        currentStep--;
    }

    private void SubmitForm()
    {
        // 폼 제출 처리 로직
        Console.WriteLine("양식이 제출되었습니다!");
    }
}

<style>
    .multistep-form-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        background-color: #2c3e50;
        color: #ecf0f1;
    }

    .form-title {
        margin-bottom: 30px;
        font-size: 24px;
    }

    .step-indicator {
        display: flex;
        justify-content: center;
        margin-top: 20px;
    }

    .step {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        background-color: #7f8c8d;
        margin: 0 5px;
    }

    .step.active {
        background-color: #3498db;
    }
</style>
